.call-us
    position absolute
    bottom 60px
    left 50%
    transform translateX(-50%)

    &__p
        font-size 18px
        letter-spacing .025em
        width 290px
        line-height 26px
        text-align center
        text-transform uppercase
        position relative

    &__phone
        width 75px
        height 75px
        background url(../img/phone.png) center no-repeat, #a3d7d4
        background-size 38px 38px
        border-radius 50%
        box-shadow 0 0 0 20px rgba(163,215,212,.5)
