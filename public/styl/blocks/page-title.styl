.page-title
    text-transform uppercase

    &--about-us
        position absolute
        top 80px
        left 50%
        transform translateX(-50%)
        display none

        @media screen and (min-width 992px)
            display block
            font-size 50px

        @media screen and (min-width 1367px)
            font-size 60px

    &--contacts
        font-size 100px
        text-align center
        padding 210px 0 190px
