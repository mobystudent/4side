.message
    &__title
        text-transform uppercase
        text-align center

        @media screen and (min-width 992px)
            font-size 42px
            padding 125px 0 70px

        @media screen and (min-width 1367px)
            font-size 60px
            padding 210px 0 90px

    &__btn
        text-transform uppercase
        text-align center
        background #78c4c1
        border 2px solid #fff
        color #fff
        line-height .01em
        margin 0 auto 85px
        display block

        @media screen and (min-width 992px)
            font-size 24px
            padding 45px 70px
            margin 0 auto 210px

        @media screen and (min-width 1367px)
            font-size 30px
            padding 55px 80px
            margin 0 auto 230px
