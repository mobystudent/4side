.info
    flex-flow column wrap
    align-items center
    margin-bottom 150px

    @media screen and (min-width 992px)
        padding 0 100px
        justify-content space-between
        flex-flow row wrap
        margin-bottom 0

    @media screen and (min-width 1367px)
        padding 0 140px

    &__box
        &--contact
            text-align center
            margin-bottom 20px

            @media screen and (min-width 992px)
                margin-bottom -15px
                text-align left

        &--address
            text-align center

            @media screen and (min-width 992px)
                text-align right

    &__title
        text-transform uppercase
        font-size 24px
        letter-spacing .01em
        margin-bottom 10px

        @media screen and (min-width 767px)
            font-size 30px

        @media screen and (min-width 992px)
            font-size 32px
            margin-bottom 25px

    &__item
        margin-bottom 10px
        color #fff
        font-size 16px
        letter-spacing .01em

        @media screen and (min-width 767px)
            font-size 18px

        @media screen and (min-width 992px)
            margin-bottom 15px
