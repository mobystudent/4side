.textarea
    border 1px solid #fff
    width 100%
    resize none
    background-color transparent
    padding 5px
    font-size 18px
    letter-spacing .075em
    color #fff

    &:focus
        outline none

    &--big
        height 200px

    @media screen and (min-width 992px)
        height 125px

    @media screen and (min-width 1367px)
        height 155px
