.spot
   background url(../img/bg-spot1.jpg) center no-repeat
   position absolute
   top 210px
   left 50%
   transform translate(-50%, 0)

   @media screen and (min-width 576px)
      width 530px
      height 530px

   @media screen and (min-width 769px)
      width 364px
      height 364px
      border-radius 50%

      &:before
         content ''
         width 100%
         height 100%
         position absolute
         top 0
         left 0
         border-radius 50%
         background rgba(140,23,89,.3)
