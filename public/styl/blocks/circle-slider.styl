.circle-slider
   position absolute
   bottom 0
   left 50%
   transform translateX(-50%)
   margin-bottom -300px

   @media screen and (min-width 769px)
      margin-top -300px
      top 0
      bottom inherit

   &__border
      height 410px
      width 410px
      border 1px solid #fff
      border-radius 50%

   &__list
      position relative
      height 135px
      margin-top -110px

   &__li
      position absolute

      &--active
         bottom 0
         left 50%
         transform translateX(-50%);

      &--prev
         top 40%
         left -10%
         transform rotate(45deg)
         width 180px
         text-align center

      &--next
         top 40%
         right -10%
         transform rotate(-45deg)
         width 180px
         text-align center

      &:before
         content ''
         width 5px
         height 5px
         border-radius 50%
         background #fff
         position absolute
         top -25px
         left 50%
         transform translateX(-50%)
