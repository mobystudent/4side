.header
    position absolute
    top 20px
    left 20px
    right 20px
    z-index 100
    align-items center

    @media screen and (min-width 767px)
        top 30px
        left 30px
        right 30px

    @media screen and (min-width 992px)
        top 35px
        left 40px
        right 40px

    &--about-us
        margin-bottom 240px

    &__close
        width 35px
        height 35px
