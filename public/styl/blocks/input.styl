.input
    border-bottom 1px solid #fff
    width 100%
    color #fff
    font-size 18px
    letter-spacing .075em
    line-height 40px
    padding 0 5px
    placeholder(#fff, 18px)

    &:hover, &:focus
        border-bottom 1px solid #fff

    @media screen and (min-width 992px)
        margin-bottom 25px

    @media screen and (min-width 1367px)
        margin-bottom 35px
